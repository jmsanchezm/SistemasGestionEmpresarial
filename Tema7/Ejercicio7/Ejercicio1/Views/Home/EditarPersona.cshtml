<form>
   @Html.HiddenFor(Model=>Model.Id)

    <label>Nombre: </label>
    @Html.TextBoxFor(Model => Model.Nombre)

    <br />
    <br />

    <label>Apellido: </label>
    @Html.TextBoxFor(Model => Model.Apellido)


    <br />
    <br />

    <label>Seleccione el departamento: </label>
    <select name="IdDepartamento">
        
        @{
            foreach (clsDepartamento depto in Model.ListaDept)
            {

                if (Model.IdDpto == depto.Id)
                {
                    <option selected = selected value=@depto.Id>@depto.Nombre</option>
                }
                else
                {
                    <option value=@depto.Id>@depto.Nombre</option>
                    
                }

                
            }

        }
    </select>


    <br />
    <br />

    <button type="submit">Guardar</button>


<br />

</form>

@Html.ActionLink("Volver al Index", "Index")

